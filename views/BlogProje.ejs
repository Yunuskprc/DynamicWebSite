  <!-- Bootstrap core CSS -->
  <link href="../node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

    .navBar{
      height: 200px;
    }

    .link-container {
      display: flex;
      justify-content: space-around;
      margin-top: 3.5%;
    }

    .link-container a {
      text-decoration: none;
      display: flex;
      align-items: center;
      color:#333;
      transition: text-decoration 5s ease;
      /* Altı çizgi efekti için 5 saniyelik geçiş süresi */
    }

    .link-container a:hover {
      text-decoration: underline;
      /* Link üzerine gelindiğinde altı çizgiyi etkinleştir */
      transition: text-decoration 0.3s ease;
      /* Hızlı bir şekilde altı çizgiyi göster */
    }

    .link-container a+a {
      margin-left: -50%;
      /* İki link arasındaki boşluğu ayarla */
    }

    .kategori{
      margin-top: 100px;
      display: flex;
      justify-content: space-around;
      
    }

    .kategori a{
      text-decoration: none;
      color: #333;
      margin: 0 100px;
    }
    .kategori a+a {
      margin-left: -50%;
      /* İki link arasındaki boşluğu ayarla */
    }

    #carouselExampleCaptions:hover .carousel-inner .carousel-item img {
    filter: blur(2px); 
    transition: filter 0.3s ease;
    }
    #carouselExampleCaptions .carousel-inner .carousel-item .carousel-caption h5,
    #carouselExampleCaptions .carousel-inner .carousel-item .carousel-caption p {
        display: none; 
        transition: filter 1s ease;
    }

#carouselExampleCaptions:hover .carousel-inner .carousel-item .carousel-caption h5,
#carouselExampleCaptions:hover .carousel-inner .carousel-item .carousel-caption p {
    display: block; 
    
}

    
</style>
