<body>

  <div class="navBar">
    <div style="padding-top: 30px;">
      <h1 style="display: flex;align-items: center;justify-content: center;">ECOLOUD</h1>
    </div>
    <div class="link-container">
      <a href="/Projelerimiz" style="align-items: center;">Projelerimiz</a>
      <a href="/Bitkilerimiz" style="align-items: center;">Bitkilerimiz</a>
      <a href="/KentselTasarimlar" style="align-items: center;">Kentsel Tasarımlarımız</a>
      <a href="/WebGunlugu" style="align-items: center;">Web Günlüğü</a>
      <a href="/Portfoy" style="align-items: center;">Portföy</a>
      <a href="/İletisim" style="align-items: center;">İletişim</a>
    </div>
    <div>
      <hr style="width: 60%; margin-left: 20%;">
    </div>
  </div>
  
  <div class="main-container">
    <div class="kategori">
      <a href="/Projelerimiz">Tüm Projeler</a>
      <% if (result) { %>
        <% for (let i = 0; i < result.length; i++) { %>
            <a href="/Projelerimiz/<%= result[i].kategoriAd %>"><%= result[i].kategoriAd %></a>
        <% } %>
      <% }else { %>

        <% } %>
    </div>

    <div style="width: 100%; display: flex; flex-wrap: wrap; justify-content: center;">
      <% if (resultProje) { %>
        <% for (let i = 0; i < resultProje.length; i++) { %>
          <% let kisaltilmisVeri = resultProje[i].projeAciklama.length > 50 ? resultProje[i].projeAciklama.slice(0, 30) + "..." : resultProje[i].projeAciklama; %>
          <div id="carouselExampleCaptions" class="carousel slide" style="max-width: 600px; max-height: 800px;display: flex;justify-content: center;padding: 2%;">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/image/<%= resultProje[i].resimArkaPlan %>" class="d-block w-100"  alt="...">
                <div class="carousel-caption d-none d-md-block" >
                  <h5><%= resultProje[i].projeAd %></h5>
                  <p><%= kisaltilmisVeri %></p>
                </div>
              </div>        
            </div>     
          </div>
        <% } %>
      <% }else { %>

        <% } %>
    </div>
  </div>


  <div class="container" style="background-color: #ffffff; margin-bottom: 0px;">
    <footer class="py-3 my-4" style="background-color: #ffffff;">
      <ul class="nav justify-content-center border-bottom pb-3 mb-3">
        <li class="nav-item" style="width: 200px;"><a href="#" class="nav-link px-2 text-muted">Ana Sayfa</a></li>
        <li class="nav-item" style="width: 200px;"><a href="/Projelerimiz" class="nav-link px-2 text-muted">Projelerim</a></li>
        <li class="nav-item" style="width: 200px;"><a href="/Bitkilerimiz" class="nav-link px-2 text-muted">Bitkilerimiz</a></li>
        <li class="nav-item" style="width: 200px;"><a href="/KentselTasarimlar" class="nav-link px-2 text-muted">Kentsel
            Tasarımlarımız</a></li>
        <li class="nav-item" style="width: 200px;"><a href="/WebGunlugu" class="nav-link px-2 text-muted">Web Günlüğü</a></li>
        <li class="nav-item" style="width: 200px;"><a href="/Portfoy" class="nav-link px-2 text-muted">Portföy</a></li>
      </ul>
      <p class="text-center text-muted">&copy; 2022 Company, Inc</p>
      <div
        style="width: 30%;height: 60%;display: flex;flex-wrap: wrap;margin-left:70% ;margin-top: -3.75%;align-items: center;justify-content:  space-around;">
        <a href="<%= resultiletisim[0].instagram %>" target="_blank">
          <h3><i class="bi bi-instagram" style="color:rgba(88,92,94,255);"></i></h3>
        </a>
        <a href="<%= resultiletisim[0].facebook %> target="_blank"">
          <h3><i class="bi bi-facebook" style="color:rgba(88,92,94,255);"></i></h3>
        </a>
        <a href="<%= resultiletisim[0].twitter %>" target="_blank">
          <h3><i class="bi bi-twitter-x" style="color:rgba(88,92,94,255);"></i></h3>
        </a>
        <a href="<%= resultiletisim[0].mail %>" target="_blank">
          <h3><i class="bi bi-envelope-at" style="color:rgba(88,92,94,255);"></i></h3>
        </a>
        <a href="<%= resultiletisim[0].linkedin %>" target="_blank">
          <h3><i class="bi bi-linkedin" style="color:rgba(88,92,94,255);"></i></h3>
        </a>
      </div>

    </footer>
  </div>
