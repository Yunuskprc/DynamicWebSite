  <script>

    function VeriCek(urunId, kategoriId) {

      fetch('/api/Bitkilerimiz', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ urunId: urunId, kategoriId, kategoriId }),
      })
        .then(response => response.json())
        .then(data => {
          document.getElementById('exampleModalLabel').innerHTML = data.data.urunAd;
          document.getElementById('urunAciklama').innerHTML = data.data.urunAciklama;
          document.getElementById('bitkiResim').src = '/image/' + data.data.urunResimYol
        })
        .catch(error => {
          console.error('Hata:', error);
        });
    }

