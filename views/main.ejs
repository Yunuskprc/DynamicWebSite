    .content {

      padding: 0px;
      height: 2400px;
      /* Aşağı kaydırmak için içeriğin yüksekliğini ayarlayın */
      padding-bottom: 60px;
      /* Footer'ın içeriği örtmemesi için içerik altına padding ekleyin */
