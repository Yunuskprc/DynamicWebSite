      color: #fff;
      text-align: center;
      padding-bottom: 0px;
      padding-top: 0px;
      height: 100px;

      width: 100%;
    }

    .section {
      padding: 20px;
      background-color: #f0f0f0;
      color: #fff;
      border-bottom: 1px solid #ddd;
      /* Bölümler arasına sınır ekler */
      background-image: url("/image/resim.jpg");
      /* Resmin yolunu url() içinde belirtin */
      background-size: cover;
      /* Resmin boyutunu kaplama şeklinde ayarlayın */
      background-position: center;
      /* Resmi ortalamak için */
      background-repeat: no-repeat;
      /* Resmin tekrar etmemesini sağlayın */
    }

    .link-container {
      display: flex;
      justify-content: space-around;
      margin-top: 2%;
    }

    .link-container a {
      position: relative;
      text-decoration: none;
      color: #ffffff;
      /* Link rengini istediğiniz renkle değiştirebilirsiniz */
    }

    .link-container a::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -3px;
      width: 100%;
      height: 1px;
      background-color: #ffffff;
      /* Alt çizgi rengini istediğiniz renkle değiştirebilirsiniz */
      transform: scaleX(0);
      transition: transform 0.3s ease-in-out;
    }

    .link-container a:hover::after {
      transform: scaleX(1);
    }


    /* Sadece linkler arasındaki boşluğu azalt */
    .link-container a+a {
      margin-left: -50%;
      /* İki link arasındaki boşluğu ayarla */
    }

    .section2 {
      display: flex;
      justify-content: space-between;
      /* Kartları boşluğa yayarak aralarında eşit mesafe bırakır */
      flex-wrap: wrap;
      /* Eğer kartlar sığmazsa, bir sonraki satıra geçmelerini sağlar */
    }

    .card {
      flex: 0 0 calc(20% - -50px);
      /* Kartların genişliğini ayarlar ve aralarında 20 piksel boşluk bırakır */
      margin-bottom: 20px;
      /* Kartlar arasında alt boşluk bırakır */
    }

    @media (max-width: 992px) {
      .card {
        flex: 0 0 calc(50% - 20px);
        /* Ekran boyutu küçüldükçe, kartların genişliğini %50 olarak ayarlar */
      }
    }

    @media (max-width: 576px) {
      .card {
        flex: 0 0 100%;
        /* Ekran boyutu daha da küçüldükçe, kartların genişliğini %100 olarak ayarlar (tek sıra) */
      }
    }

    .nav-link {
      position: relative;
      text-decoration: none;
      color: #6c757d;
      /* Link rengini istediğiniz renkle değiştirebilirsiniz */
      display: inline-block;
      margin-bottom: 0px;
      /* Link altındaki boşluğu kaldırmak için */

    }

    .nav-link::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 3px;
      width: 100%;
      height: 1.5px;
      background-color: #6c757d;
      /* Alt çizgi rengini istediğiniz renkle değiştirebilirsiniz */
      transform: scaleX(0);
      transition: transform 0.3s ease-in-out;
    }

    .nav-link:hover::after {
      transform: scaleX(1);
    }

    .btn.active {
      background-color: #ffffff;
      /* Butonun mevcut arka plan rengi */
      color: #6c757d;
      /* Butonun mevcut yazı rengi */
      transition: background-color 0.3s, color 0.3s;
      /* Geçiş efekti */
    }

    .btn.active:hover {
      background-color: #6c757d;
      /* Butonun üzerine gelindiğinde arka plan rengi */
      color: #ffffff;
      /* Butonun üzerine gelindiğinde yazı rengi */
    }
  </style>
